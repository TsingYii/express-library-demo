extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') 种类:
      input#name.form-control(type='text', placeholder='文学,小说,哲学,物理等' name='name' value=(undefined===genre ? '' : genre.name))
    button.btn.btn-primary(type='submit') 提交

  if errors 
    ul
      for error in errors
        li!= error.msg